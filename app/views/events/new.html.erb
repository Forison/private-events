<main><%= provide(:title, "signup")%> 
<div class="space"></div>
<div class="m-5 container ">
    <div class=" shaddow col-xs-10 mx-auto col-sm-6  col-md-4 col-lg-4 signup_wrap">
        <h5 class="text-center signup">Create a new event <%= current_user.name %></h1>

            <div class="m-5">
        <%= form_for(@event, url: events_new_path) do |f| %>

        <%= f.label :description, "Add a description of the event" %> <br>
        <%= f.text_area :description %> <br>
        <%= f.submit "create" , class: "btn btn-primary" %> <br>
        <% end %>

    </div>

    </div>

</div>
</main>