<h1 class="text-center">Index page of Event</h1>

<div class="container mt-2">
    <h1>upcoming events</h1>
    <div class="row">

        <% @upcoming_events.each do |event|%>
        <div class="col-12 col-sm-6 col-md-4 col-md-3 event_index_col">
            <span class="pull-left"><%= time_ago_in_words(event.date)%></span>
            <p><%= event.description %></p>
            <p><%= %></p>
        </div>
        <% end %>
    </div>
    <hr>
    <h1>past events</h1>
    <div class="row">

        <% @past_events.each do |event|%>
        <div class="col-12 col-sm-6 col-md-4 col-md-3 event_index_col">
            <span class="pull-left"><%= time_ago_in_words(event.date)%></span>
            <p><%= event.description %></p>
            <p><%= %></p>
        </div>
        <% end %>
    </div>
</div>