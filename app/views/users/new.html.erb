<%= provide(:title, "signup")%>
<div class="space"></div>
<div class="container ">
    <div class=" shaddow col-xs-10 mx-auto col-sm-6  col-md-4 col-lg-4 signup_wrap">
        <h1 class="text-center signup">Signup</h1>
        <%= form_for(@user , url: users_new_path ) do |f| %>
        <%= f.label :name %> <br>
        <%= f.text_field :name, class: 'form-control' %> <br>

        <%= f.label :email %> <br>
        <%= f.email_field :email ,class: "form-control" %> <br>

        <%= f.label :password %> <br>
        <%= f.password_field :password,  class: "form-control" %> <br>

        <%= f.label :password_confirmation %> <br>
        <%= f.password_field :password_confirmation ,class: "form-control" %> <br>

        <%= f.submit "create" , class: "btn btn-primary" %> <br>
        <p class="note">already a member ? <%= link_to "log in" %> </p>
        <% end %>

    </div>
</div>